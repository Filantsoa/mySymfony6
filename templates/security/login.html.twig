{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    
    <section class="container-fluid">
        <div id="best-login">
            <div class="login-icon">
                <i class="fa fa-user"></i>
                <h1>Member Login</h1>
            </div>

            <div class="form-login">
                <form action="" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="form-group-login">
                        <label for="inputEmail" class="form-label-login" id="inputEmail">Email *</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control-login" placeholder="E-mail" autocomplete="email" required>
                    </div>

                    <div class="form-group-login">
                        <label for="inputEmail" class="form-label-login" id="inputPassword">Mot de passe *</label>
                        <input type="password" name="password" id="inputPassword" class="form-control-login" placeholder="Mot de passe" autocomplete="current-password" required>
                    </div>
                </form>
            </div>
        </div>
    </section>
    
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
